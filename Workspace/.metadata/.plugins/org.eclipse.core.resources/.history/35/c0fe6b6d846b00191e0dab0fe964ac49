package buttonControls;

public class InputParser {
	String input;
	String output;
	
	public InputParser() {
		this("");
	}
	public InputParser(String input) {
		this.input = input;
		this.output = parsePEMDAS();
	}
	
	/**
	 * Note: PE_MD_AS, separate in order.
	 * Ex:	"(ab + b^c)^d + (e/f) - g - h"
	 * 		"(ab + b^c( ^d + (e/f(  - g - h"
	 * 		 [ab + b^c, ^d + ,e/f,  - g - h]
	 * 		 
	 * @return
	 */
	private String[][] parsePEMDAS(){
		input.replace(")", "(");
		String[] parenthesis = input.split("(");
		String[] exponent = parseExp(parenthesis);
	}
	private String[][] parseExp(String[] parenthesis) {
		
	}
	private String[][] parsePlusMinus() {
		String[] toAdd = input.split("+");
		return toSubtract(toAdd);
	}
	
	private String[][] toSubtract(String[] toAdd){
		String[][] toSubt = new String[toAdd.length][];
		for (int i = 0; i < toAdd.length; i++) {
			toSubt[i] = toAdd[i].split("-");
		}
		return toSubt;
	}

}
